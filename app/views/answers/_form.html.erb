<%= form_for([question, answer], remote: true) do |f| %>
  <% if answer.errors.any? %>
      <h2><%= answer.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  <% end %>
    <%= f.hidden_field :question_id %>
    <%= f.text_field :content %>
    <%= f.submit %>
<% end %>
